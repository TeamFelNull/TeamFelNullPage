#packmode kappa
//removal
mods.tconstruct.Casting.removeTableRecipe(<enderio:item_material:12>, <liquid:energetic_alloy>);
mods.tconstruct.Casting.removeTableRecipe(<enderio:item_material:13>, <liquid:vibrant_alloy>);
mods.tconstruct.Casting.removeTableRecipe(<enderio:item_material:14>, <liquid:pulsating_iron>);
mods.tconstruct.Casting.removeTableRecipe(<enderio:item_material:15>, <liquid:vibrant_alloy>);
mods.tconstruct.Casting.removeTableRecipe(<enderio:item_material:73>, <liquid:dark_steel>);
mods.tconstruct.Casting.removeBasinRecipe(<minecraft:redstone_block>, <liquid:redstone>);
mods.tconstruct.Alloy.removeRecipe(<liquid:energetic_alloy>);
mods.tconstruct.Alloy.removeRecipe(<liquid:vibrant_alloy>);
mods.tconstruct.Alloy.removeRecipe(<liquid:vivid_alloy>);
mods.tconstruct.Alloy.removeRecipe(<liquid:energetic_silver>);

//addition
mods.tconstruct.Casting.addTableRecipe(<minecraft:redstone>, null, <liquid:redstone>, 200, true, 200);
mods.tconstruct.Alloy.addRecipe(<liquid:energetic_alloy> * 72, [<liquid:glowstone> * 125, <liquid:redstone> * 50, <liquid:electrum> * 72]);
mods.tconstruct.Alloy.addRecipe(<liquid:vibrant_alloy> * 72, [<liquid:ender> * 125, <liquid:ardite> * 72, <liquid:energetic_alloy> * 72]);
mods.tconstruct.Alloy.addRecipe(<liquid:vivid_alloy> * 72, [<liquid:ender> * 125, <liquid:cobalt> * 72, <liquid:energetic_silver> * 72]);
