# Configuration file

general {
    # Enables custom shops. [default: false]
    B:customShops=false

    # Determines if shops need GF if SextiarySector2 is present. [default: true]
    B:shopsRequireGF=true

    # Determines if the player in single player is always considered an OP. Only use for making maps. [default: false]
    B:spIsOP=false
}


##########################################################################################################
# mp
#--------------------------------------------------------------------------------------------------------#
# Add sell price to ItemStack.
# "ModID:RegisteredName:metadata:price"
##########################################################################################################

mp {
    S:PriceRegister <
        DCsAppleMilk:defeatedcrow.clam:0:50
     >
}


##########################################################################################################
# seasonshop
#--------------------------------------------------------------------------------------------------------#
# Configure inventories for the seasonal shop.
# "ModID:RegisteredName:metadata:price"
##########################################################################################################

seasonshop {
    S:autumn <
        minecraft:sapling:2:250
        minecraft:sapling:5:250
        minecraft:dirt:2:100
        minecraft:pumpkin_seeds:0:10
        minecraft:double_plant:4:100
